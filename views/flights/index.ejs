<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Flight List</h1>
  <table id="list">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <%# Write the line of EJS to iterate over movies using forEach %>
      <% flights.forEach(flight => { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><a href="/flights/<%= flight._id %>">Details</a></td>
          <td>
            <form 
              action="/flights/<%= flight._id %>?_method=DELETE" 
              method="POST"
            >
              <button>X</button>
          </form>
        </td>
          <%# finish the ternary expression to display 'Yes' or 'Nope' %> 
        </tr>
        <%# Close the forEach using EJS here %>
        <% }) %>
    </tbody>
  </table>
</main>

